%script#teams_tmpl(type="text/x-handlebars-template")
  .container
    .hero-unit
      %table.table.table-striped.table-hover
        %thead
          %tr
            %th Point Totals
            - (1..Week.last.week).each do |week|
              %th= week
            %th.center Total Points
            %th.center Points Rank
        %tbody
          {{#teams}}
          %tr
            %td {{name}}
            {{#week}}
            %td {{points}}
            {{/week}}
            {{#year}}
            %td.center {{overall_points}}
            %td.center {{points_rank}}
            {{/year}}
          {{/teams}}

    .hero-unit
      %table.table.table-striped.table-hover
        %thead
          %tr
            %th Point Totals
            - (1..Week.last.week).each do |week|
              %th= week
            %th.center Total Points
            %th.center Points Rank
        %tbody
          {{#teams}}
          %tr
            %td {{name}}
            {{#week}}
            {{visualPayout ranking payout}}
            {{/week}}
            {{#year}}
            {{visualTotalPayout sidebet_rank overall_sidebets}}
            %td.center {{sidebet_rank}}
            {{/year}}
          {{/teams}}
